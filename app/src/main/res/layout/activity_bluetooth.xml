<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bluetooth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="engineeringwork.pl.kinzil.activity.BluetoothActivity">

    <Button
        android:text="Scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:id="@+id/scanButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/devicesFound" />

    <Button
        android:text="Connect to device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/connectButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button2"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="23dp"
        android:id="@+id/devicesFound"
        android:layout_height="50dp"
        android:text="noDevice"
        android:layout_below="@+id/scanButton"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/devicesFound2"
        android:layout_height="50dp"
        android:text="noDevice"
        android:layout_below="@+id/devicesFound"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <Button
        android:text="Connect to device 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connectButton2"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/connectButton"
        android:layout_alignBottom="@+id/connectButton"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
