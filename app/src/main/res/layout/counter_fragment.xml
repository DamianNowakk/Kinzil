<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Dane z licznika"
        android:layout_width="match_parent"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_height="120dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/counterImageView1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="@string/result1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/resultLabel1"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:text="0 km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/result1"
                        android:textSize="24sp"
                        android:textAlignment="textStart"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/counterImageView2" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="@string/result2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/resultLabel2"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:text="0 h 0 m 0 s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/result2"
                        android:textSize="24sp"
                        android:textAlignment="textStart"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/counterImageView3" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="@string/result3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/resultLabel3"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:text="0 km/h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/result3"
                        android:textSize="24sp"
                        android:textAlignment="textStart"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/counterImageView4" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="@string/result4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/resultLabel4"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:text="0 km/h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/result4"
                        android:textSize="24sp"
                        android:textAlignment="textStart"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/counterImageView5" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="@string/result5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/resultLabel5"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/result5"
                        android:textSize="24sp"
                        android:textAlignment="textStart"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/counterImageView6" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="@string/result6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/resultLabel6"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:text="0 km/h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/result6"
                        android:textSize="24sp"
                        android:textAlignment="textStart"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="START"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startTrip" />
        </TableRow>

    </TableLayout>

</RelativeLayout>