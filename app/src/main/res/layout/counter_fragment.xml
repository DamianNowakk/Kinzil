<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:src="@mipmap/ic_speed"
                android:id="@+id/counterImageView6"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <TextView
                    android:text="@string/result6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:id="@+id/resultLabel6"
                    android:textAlignment="textStart"
                    android:paddingTop="@dimen/counter_header_padding_top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result6"
                        android:textSize="72px"
                        android:textAlignment="textStart" />

                    <TextView
                        android:text="km/h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textSize="36px"
                        android:layout_marginLeft="@dimen/counter_unit_margin" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <ImageView
                android:layout_height="74dp"
                android:src="@mipmap/ic_avg_speed"
                android:id="@+id/counterImageView7"
                android:layout_width="65dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="Avg. Speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/counter_header_size"
                    android:id="@+id/resultLabel7"

                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/counter_header_padding_top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result7"
                        android:textSize="@dimen/counter_value_size"
                        android:text="0" />

                    <TextView
                        android:text="km/h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView77"
                        android:textSize="@dimen/counter_unit_size"
                        android:layout_marginLeft="@dimen/counter_unit_margin" />

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView777"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50">

            <ImageView
                android:src="@mipmap/ic_hourglass"
                android:id="@+id/counterImageView2"
                android:layout_width="65dp"
                android:layout_height="74dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="@string/result2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/counter_header_size"
                    android:id="@+id/resultLabel2"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/counter_header_padding_top" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result2"
                    android:textSize="@dimen/counter_value_size"
                    android:textAlignment="textStart"
                    android:layout_marginBottom="4dp"
                    android:text="00:00:00" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:textSize="@dimen/counter_unit_size" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <ImageView
                android:layout_height="74dp"
                android:src="@mipmap/ic_avg_speed"
                android:id="@+id/counterImageView3"
                android:layout_width="65dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="@string/result3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/counter_header_size"
                    android:id="@+id/resultLabel3"
                    android:textAlignment="textStart"
                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/counter_header_padding_top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result3"
                        android:textSize="@dimen/counter_value_size" />

                    <TextView
                        android:text="km/h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textSize="@dimen/counter_unit_size"
                        android:layout_marginLeft="@dimen/counter_unit_margin" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50">

            <ImageView
                android:src="@mipmap/ic_hourglass"
                android:id="@+id/counterImageView8"
                android:layout_width="65dp"
                android:layout_height="74dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="@string/drive_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/counter_header_size"
                    android:id="@+id/resultLabel8"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/counter_header_padding_top" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeWithStops"
                    android:textSize="@dimen/counter_value_size"
                    android:textAlignment="textStart"
                    android:layout_marginBottom="4dp"
                    android:text="00:00:00" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView888"
                    android:layout_weight="1"
                    android:textSize="@dimen/counter_unit_size" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <ImageView
                android:layout_height="74dp"
                android:src="@mipmap/ic_path"
                android:id="@+id/counterImageView9"
                android:layout_width="65dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="@string/result1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/counter_header_size"
                    android:id="@+id/resultLabel9"

                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/counter_header_padding_top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result9"
                        android:textSize="@dimen/counter_value_size"
                        android:text="0" />

                    <TextView
                        android:text="km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView99"
                        android:textSize="@dimen/counter_unit_size"
                        android:layout_marginLeft="@dimen/counter_unit_margin" />

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView999"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <ImageView
                android:layout_height="74dp"
                android:src="@mipmap/ic_path"
                android:id="@+id/counterImageView1"
                android:layout_width="65dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="Overall "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/counter_header_size"
                    android:id="@+id/resultLabel1"

                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/counter_header_padding_top"
                    android:elevation="1dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result1"
                        android:textSize="@dimen/counter_value_size"
                        android:text="0" />

                    <TextView
                        android:text="km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textSize="@dimen/counter_unit_size"
                        android:layout_marginLeft="@dimen/counter_unit_margin" />

                </LinearLayout>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="74dp"
                android:src="@mipmap/ic_flame"
                android:id="@+id/counterImageView5" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="@string/result5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/counter_header_size"
                    android:id="@+id/resultLabel5"
                    android:textAlignment="textStart"
                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/counter_header_padding_top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result5"
                        android:textSize="@dimen/counter_value_size"
                        android:textAlignment="textStart" />

                    <TextView
                        android:text="kcal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textSize="@dimen/counter_unit_size"
                        android:layout_marginLeft="@dimen/counter_unit_margin" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <ImageView
                android:layout_height="74dp"
                android:src="@mipmap/ic_maxspeed"
                android:id="@+id/counterImageView4"
                android:layout_width="65dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="@string/result4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/counter_header_size"
                    android:id="@+id/resultLabel4"
                    android:textAlignment="textStart"
                    android:layout_marginTop="8dp"
                    android:paddingTop="@dimen/counter_header_padding_top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result4"
                        android:textSize="@dimen/counter_value_size"
                        android:textAlignment="textStart"
                        android:elevation="1dp" />

                    <TextView
                        android:text="km/h"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:textSize="@dimen/counter_unit_size"
                        android:layout_marginLeft="@dimen/counter_unit_margin" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="START"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startTrip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/StateView"
        android:layout_span="1"
        android:textAlignment="center" />

</LinearLayout>